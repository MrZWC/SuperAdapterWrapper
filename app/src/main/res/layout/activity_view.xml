<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".moudle.view.ViewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.superadapterwrapper.moudle.view.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/actionBar_bg_blue">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF8247"
                android:padding="20dip"
                android:text="按钮1"
                android:textColor="#ffffff"
                android:textSize="20dip" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#8B0A50"
                android:padding="10dip"
                android:text="按钮2222222222222"
                android:textColor="#ffffff"
                android:textSize="20dip" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#7CFC00"
                android:padding="15dip"
                android:text="按钮333333"
                android:textColor="#ffffff"
                android:textSize="20dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="按钮44"
                    android:textColor="#ffffff"
                    android:textSize="10dip" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1E90FF"
                android:padding="10dip"
                android:text="按钮44"
                android:textColor="#ffffff"
                android:textSize="10dip" />

