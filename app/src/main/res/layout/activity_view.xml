                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#7A67EE"
                android:text="按钮999"
                android:textColor="#ffffff"
                android:textSize="20dip" />

        </com.example.superadapterwrapper.moudle.view.AutoLinearLayout>

    </ScrollView>
</LinearLayout>